<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:descendantFocusability="blocksDescendants">

    <LinearLayout
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="#e0eef8">

        <TextView
            android:id="@+id/layout_request_time_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="0월"
            android:textColor="#2561b0"
            android:textSize="14dp"
            android:ellipsize="middle"
            android:maxLines="1"/>

        <TextView
            android:id="@+id/layout_request_time_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="0일"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="#2561b0"
            android:textSize="16dp"
            android:ellipsize="middle"
            android:maxLines="1"/>

        <TextView
            android:id="@+id/layout_request_time_day_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="0요일"
            android:textColor="#9298a1"
            android:textSize="12dp"
            android:ellipsize="middle"
            android:maxLines="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/layout_request_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="주소"
            android:textColor="#262b33"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/layout_request_location_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="상세 주소"
            android:textColor="#626971"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/layout_request_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시간"
            android:textColor="#9298a1"
            android:textSize="14dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/layout_request_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:layout_gravity="center"
        android:textSize="14dp"
        android:text="대기 중"
        android:layout_marginRight="24dp"/>

</LinearLayout>
