<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.sm.cheongminapp.MapsActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/maps_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <EditText
        android:id="@+id/maps_search_text"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="건물명 또는 주소를 입력하세요"
        android:background="@drawable/flat_edit_text_background"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:textColorHint="#9298a1" />

    <fragment
        android:id="@+id/maps_map_framgent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.google.android.gms.maps.SupportMapFragment">
    </fragment>

</LinearLayout>
